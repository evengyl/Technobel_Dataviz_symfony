{% extends 'base.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block body %}
    <h1>{{titlePage}}</h1>

    <div class="row">
        {% for categ in allCateg %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ categ.name }}</h5>
                    <p class="card-text">{{ categ.description }}</p>
                    <a href="{{ url('app_admin_update_categ', {id : categ.id} )}}" class="card-link">Modifier</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
